<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.VoFaz.FormEditText" >
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>

        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>

        <item name="android:background">@drawable/edit_text_background</item>
    </style>

    <style name="Theme.VoFaz.FormEditText.Add">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:textSize">17sp</item>
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/gray_100</item>
        <item name="android:textColorHint">@color/gray_200</item>
        <item name="android:hint">@string/prev_task_name</item>

        <item name="android:background">@drawable/edit_text_add_background</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="Theme.VoFaz.FormInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginEnd">40dp</item>
        <item name="android:layout_marginStart">40dp</item>
        <item name="android:hint">@null</item>
        <item name="android:textColorHint">@null</item>

    </style>
    <style name="Theme.VoFaz.EditTextIcon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginTop">18dp</item>

    </style>



    <style name="Theme.VoFaz.Button.Main" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="backgroundTint">@color/button_background_main</item>
        <item name="android:background">@drawable/button_background_main</item>
        <item name="expandedHintEnabled">false</item>
    </style>

    <style name="Theme.VoFaz.Button.Date" parent="Widget.AppCompat.Button" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/gray_100</item>
        <item name="android:background">@drawable/button_background_date</item>
    </style>





</resources>